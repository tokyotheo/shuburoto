<%= render :partial => 'shared/account' %>
<h2><%= link_to 'Users', admin_users_path %></h2>
<h1>Lectures(<%=h @lectures.size %>)</h1>
<h2><%= link_to 'Lessons', admin_lessons_path %></h2>

<table>
  <tr>
    <th>NO</th>
    <th>Title</th>
    <th>Instructor</th>
    <th>Category1</th>
    <th>Category2</th>
    <th>Description</th>
    <th>Credit</th>
  </tr>

<% for lecture in @lectures %>
  <tr>
    <td><%=h lecture.no %></td>
    <td><%=h lecture.title %></td>
    <td><%=h lecture.instructor %></td>
    <td><%=h lecture.category1 %></td>
    <td><%=h lecture.category2 %></td>
    <td><%=h lecture.description %></td>
    <td><%=h lecture.credit %></td>
    <td><%= link_to 'Show', admin_lecture_path(lecture) %></td>
    <td><%= link_to 'Edit', edit_admin_lecture_path(lecture) %></td>
    <td><%= link_to 'Destroy', admin_lecture_path(lecture), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New lecture', new_admin_lecture_path %>
