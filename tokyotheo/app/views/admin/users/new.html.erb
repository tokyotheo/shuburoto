<h1>New user</h1>

<% form_for @user, :url => {:controller => 'admin/users', :action => 'create'}  do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :user_id %><br />
    <%= f.text_field :user_id %>
  </p>
  <p>
    <%= f.label "Password" %><br />
    <%= f.password_field :password_new %>
  </p>
  <p>
    <%= f.label "Password(confirm)" %><br />
    <%= f.password_field :password_new_confirmation %>
  </p>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :admin %><br />
    <%= f.check_box :admin %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', admin_users_path %>
