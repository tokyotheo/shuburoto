<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
	 "#www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="#www.w3.org/1999/xhtml" id="sixapart-standard">

<HEAD>
	<META http-equiv="Content-Type" content="text/html; charset=UTF-8">
	<META http-equiv="Content-Style-Type" content="text/css">
	<link href="http://202.218.237.141/css/styles-site.css" type="text/css" rel="stylesheet" media="all" />
	<script src="http://202.218.237.141/spry/includes/xpath.js" type="text/javascript"></script>
	<script src="http://202.218.237.141/spry/includes/SpryData.js" type="text/javascript"></script>
	<script type="text/javascript">
		var dsLectures = new Spry.Data.XMLDataSet("http://202.218.237.141/rails/lectures.xml","lectures/lecture");
	</script>
	<TITLE>東京神学校インターネットコース</TITLE>

</HEAD>
<BODY>
	<div id="description_wrap">
		<div id="description">
			<div id="description_left"><h1>東京神学校インターネットコース</h1></div>
			<div id="description_right"><h1>インターネット神学校なら東京神学校</h1></div>
			<div class="clear-both"><hr class="none" /></div>
		</div>
	</div>

	<DIV id="wrapper2">
		<DIV class="wrapper-1">
			<DIV class="wrapper-2">
				<DIV id="header">
					<DIV id="header-1">
						<DIV class="float-right"><%= render :partial => 'shared/account' %></DIV>

					</DIV><!-- header-1終了 -->
				</DIV><!-- header終了 -->

				<DIV id="content">
					<!--ナビゲーション開始-->
					<div id="grobal_navi">
						<h6><span>東京神学校（インターネット神学校）</span></h6>
						<div id="menu">
						<ul>
							<li><a>管理ページ</a></li>
						</ul>
						<!-- = render :partial => 'shared/menu_bar' -->
						</div><!-- menu終了 -->

						<div class="clear-both"><hr class="none" /></div>

						<div id="sub_menu">
							<ul>
								<!--<li><a href="contact.php">サブメニュー</a></li>-->
							</ul>
						</div><!-- submenu終了 -->
					</div><!-- grobal_navi終了 -->

					<div id="left">
		<!--ナビゲーション開始-->
					  <DIV class="ct_navi">
						<DIV class="ct_menu">
								<% if @current_user -%>
								<UL>
									<LI><a>科目の購入ができます</a></LI>
								</UL>
								<% end -%>
						</DIV><!-- ct_menu終了 -->
						<%= render :partial => 'shared/side_bar' %>
					  </DIV><!-- ct_navi終了 -->

					</div><!-- left終了 -->
					
					<div id="mainwide"><!--メイン開始-->
						<address></address>
						<div class="mainwide_inner">

							<div class="LineBox1_wrapper">
								<div class="LineBox1_wrapper1">
									<% if @current_user -%>
									<h2>【管理者用】<%=h @user.name %>さんのページ</h2>
									<p>
									  <b>User:</b>
									  <%=h @user.name %>
									  (<%=h @user.user_id %>)
									</p>
									
									<p>
									  <b>Email:</b>
									  <%=h @user.email %>
									</p>

									<p>
									  <%= link_to 'プロファイルの編集', edit_admin_user_path(@user) %>
									</p>
									<% credit = 0 %>
									<% @lectures_finished.each do |pc| credit += pc[0].credit end %>
									<p>
										(取得単位: <%=h credit %>)
									</p>
									<p>購入済み科目</p>
									<table class="mypage">
									<tr>
										<th>科目番号</th>
										<th>科目名称</th>
										<th>単位</th>
										<th>状態</th>
										<th>操作</th>
									</tr>
									<% @lectures_purchased.each do |pc| %>
									  <tr><td><%=h pc[0].no %></td>
									  <td><%=h pc[0].title %></td>
									  <td><%=h pc[0].credit %></td>
									  <td><%=h pc[1].start %> 購入</td>
									  <td><%= link_to '編集する', edit_admin_purchase_path(pc[1]) %></td><tr>
									<% end %>
									</table>
									<p>完了科目(取得単位: <%=h credit %>)</p>
									<table class="mypage">
									<tr>
										<th>科目番号</th>
										<th>科目名称</th>
										<th>単位</th>
										<th>状態</th>
										<th>操作</th>
									</tr>
									<% @lectures_finished.each do |pc| %>
									  <tr><td><%=h pc[0].no %></td>
									  <td><%=h pc[0].title %>
									  <td><%=h pc[0].credit %></td>
									  <td><%=h pc[1].end %> 完了</td>
									  <td><%= link_to '編集する', edit_admin_purchase_path(pc[1]) %></td><tr>
									<% end %>
									</table>
									<p>未購入科目</p>
									<table class="mypage">
									<tr>
										<th>科目番号</th>
										<th>科目名称</th>
										<th>単位</th>
										<th>状態</th>
										<th>操作</th>
									</tr>
									<% @lectures_not_purchased.each do |pc| %>
									  <tr><td><%=h pc.no %></td>
									  <td><%=h pc.title %></td>
									  <td><%=h pc.credit %></td>
									  <td>(未購入)</td>
									  <td><%= link_to '購入処理', :controller => "admin/purchases", :action => "new", :lecture_no => pc.no, :user => @user %></td><tr>
									<% end %>
									</table>
								<% else %>
									<h2>マイページ</h2>
									<p>ログインしてください</p>
								<% end -%>
								</p>
									
								<div class="clear-both"><hr class="none"></div>
								</div><!--LineBox1_wrapper1-->
							</div><!--LineBox1_wrapper-->


						</div><!--main_inner-->
					</div><!--メイン終了-->

				</DIV><!-- content終了 -->
				<div class="clear-both"><hr class="none" /></div>

			</DIV><!-- wrapper-2終了-->
		</DIV><!-- wrapper-1終了-->
	</DIV><!-- wrapper終了 -->
	<DIV id=footer>
		<p>Copyright (C) 2009,2010 <em>東京神学校</em>. All Rights Reserved.</p>
	</DIV><!-- footer終了 -->


</BODY>

</HTML>
